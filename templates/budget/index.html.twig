{% extends 'base.html.twig' %}

{% block title %}Budgets - Budget Manager{% endblock %}

{% block page_title %}Mes Budgets{% endblock %}

{% block page_actions %}
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('app_budget_index', {'month': currentMonth - 1, 'year': currentYear}) }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-chevron-left"></i>
            </a>
            <button type="button" class="btn btn-sm btn-outline-secondary">
                {{ '%02d'|format(currentMonth) }}/{{ currentYear }}
            </button>
            <a href="{{ path('app_budget_index', {'month': currentMonth + 1, 'year': currentYear}) }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-chevron-right"></i>
            </a>
        </div>
        <a href="{{ path('app_budget_new') }}" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau budget
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title mb-4">
                Budgets de {{ '%02d'|format(currentMonth) }}/{{ currentYear }}
                <span class="badge bg-secondary">{{ budgets|length }}</span>
            </h5>

            {% if budgets|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Cat√©gorie</th>
                                <th>Description</th>
                                <th class="text-end">Montant</th>
                                <th>P√©riode</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for budget in budgets %}
                                <tr>
                                    <td class="fw-medium">{{ budget.name }}</td>
                                    <td>
                                        {% if budget.categoryName %}
                                            <span class="badge bg-secondary">{{ budget.categoryName }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            {{ budget.description|default('-')|length > 50 
                                                ? budget.description|slice(0, 50) ~ '...' 
                                                : budget.description|default('-') }}
                                        </small>
                                    </td>
                                    <td class="text-end fw-bold">{{ budget.amount|number_format(2, ',', ' ') }} ‚Ç¨</td>
                                    <td>{{ budget.period }}</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('app_budget_edit', {'id': budget.id}) }}" class="btn btn-outline-primary" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_budget_delete', {'id': budget.id}) }}" class="d-inline" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce budget ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ budget.id) }}">
                                                <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="bi bi-pie-chart display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">Aucun budget pour ce mois</h4>
                    <p class="text-muted">D√©finissez des budgets mensuels pour mieux contr√¥ler vos d√©penses</p>
                    <a href="{{ path('app_budget_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Cr√©er un budget
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Informations sur les budgets -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> √Ä propos des budgets</h5>
        </div>
        <div class="card-body">
            <p class="mb-2"><strong>Les budgets vous permettent de :</strong></p>
            <ul>
                <li>D√©finir des limites de d√©penses mensuelles par cat√©gorie</li>
                <li>Suivre votre progression en temps r√©el sur le tableau de bord</li>
                <li>Recevoir des alertes visuelles en cas de d√©passement</li>
                <li>Mieux planifier vos finances sur le long terme</li>
            </ul>
            <p class="mb-0 text-muted">
                <small>üí° Conseil : Commencez par analyser vos d√©penses des mois pr√©c√©dents avant de d√©finir vos budgets.</small>
            </p>
        </div>
    </div>
{% endblock %}
