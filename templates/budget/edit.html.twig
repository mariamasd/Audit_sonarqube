{% extends 'base.html.twig' %}

{% block title %}Modifier Budget - Budget Manager{% endblock %}

{% block page_title %}Modifier le Budget{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_budget_index') }}" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nom du budget *</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{ budget.name }}" required maxlength="100">
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="2">{{ budget.description }}</textarea>
                        </div>

                        <div class="mb-3">
                            <label for="amount" class="form-label">Montant (€) *</label>
                            <input type="number" class="form-control" id="amount" name="amount" value="{{ budget.amount }}" step="0.01" min="0" required>
                        </div>

                        <div class="mb-3">
                            <label for="category_name" class="form-label">Catégorie associée</label>
                            <input type="text" class="form-control" id="category_name" name="category_name" value="{{ budget.categoryName }}" maxlength="100">
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="month" class="form-label">Mois *</label>
                                <select class="form-select" id="month" name="month" required>
                                    <option value="1" {% if budget.month == 1 %}selected{% endif %}>Janvier</option>
                                    <option value="2" {% if budget.month == 2 %}selected{% endif %}>Février</option>
                                    <option value="3" {% if budget.month == 3 %}selected{% endif %}>Mars</option>
                                    <option value="4" {% if budget.month == 4 %}selected{% endif %}>Avril</option>
                                    <option value="5" {% if budget.month == 5 %}selected{% endif %}>Mai</option>
                                    <option value="6" {% if budget.month == 6 %}selected{% endif %}>Juin</option>
                                    <option value="7" {% if budget.month == 7 %}selected{% endif %}>Juillet</option>
                                    <option value="8" {% if budget.month == 8 %}selected{% endif %}>Août</option>
                                    <option value="9" {% if budget.month == 9 %}selected{% endif %}>Septembre</option>
                                    <option value="10" {% if budget.month == 10 %}selected{% endif %}>Octobre</option>
                                    <option value="11" {% if budget.month == 11 %}selected{% endif %}>Novembre</option>
                                    <option value="12" {% if budget.month == 12 %}selected{% endif %}>Décembre</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="year" class="form-label">Année *</label>
                                <select class="form-select" id="year" name="year" required>
                                    {% for y in range(budget.year - 2, budget.year + 2) %}
                                        <option value="{{ y }}" {% if y == budget.year %}selected{% endif %}>{{ y }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_budget_index') }}" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Mettre à jour
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="text-muted">Informations</h6>
                    <small class="text-muted">
                        Créé le : {{ budget.createdAt|date('d/m/Y à H:i') }}
                        {% if budget.updatedAt %}
                            <br>Modifié le : {{ budget.updatedAt|date('d/m/Y à H:i') }}
                        {% endif %}
                    </small>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
