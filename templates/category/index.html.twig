{% extends 'base.html.twig' %}

{% block title %}Catégories - Budget Manager{% endblock %}

{% block page_title %}Mes Catégories{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_category_new') }}" class="btn btn-sm btn-primary">
        <i class="bi bi-plus-circle"></i> Nouvelle catégorie
    </a>
{% endblock %}

{% block body %}
    <div class="row">
        <!-- Catégories de dépenses -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-arrow-down-circle"></i> Catégories de Dépenses
                    </h5>
                </div>
                <div class="card-body">
                    {% set expenseCategories = categories|filter(c => c.type == 'expense') %}
                    {% if expenseCategories|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for category in expenseCategories %}
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3" style="width: 40px; height: 40px; background-color: {{ category.color }}; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                                            {% if category.icon %}
                                                <i class="bi bi-{{ category.icon }} text-white"></i>
                                            {% else %}
                                                <i class="bi bi-tag text-white"></i>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <h6 class="mb-0">{{ category.name }}</h6>
                                            {% if category.description %}
                                                <small class="text-muted">{{ category.description }}</small>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-primary" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer cette catégorie supprimera aussi toutes ses transactions. Êtes-vous sûr ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                            <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">Aucune catégorie de dépense</p>
                            <a href="{{ path('app_category_new') }}" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-plus"></i> Créer une catégorie
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Catégories de revenus -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-arrow-up-circle"></i> Catégories de Revenus
                    </h5>
                </div>
                <div class="card-body">
                    {% set incomeCategories = categories|filter(c => c.type == 'income') %}
                    {% if incomeCategories|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for category in incomeCategories %}
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3" style="width: 40px; height: 40px; background-color: {{ category.color }}; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                                            {% if category.icon %}
                                                <i class="bi bi-{{ category.icon }} text-white"></i>
                                            {% else %}
                                                <i class="bi bi-tag text-white"></i>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <h6 class="mb-0">{{ category.name }}</h6>
                                            {% if category.description %}
                                                <small class="text-muted">{{ category.description }}</small>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-primary" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer cette catégorie supprimera aussi toutes ses transactions. Êtes-vous sûr ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                            <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">Aucune catégorie de revenu</p>
                            <a href="{{ path('app_category_new') }}" class="btn btn-sm btn-outline-success">
                                <i class="bi bi-plus"></i> Créer une catégorie
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Suggestions de catégories -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-lightbulb"></i> Suggestions de Catégories</h5>
        </div>
        <div class="card-body">
            <h6 class="text-danger">Dépenses courantes :</h6>
            <div class="mb-3">
                <span class="badge bg-secondary me-2">Alimentation</span>
                <span class="badge bg-secondary me-2">Transport</span>
                <span class="badge bg-secondary me-2">Logement</span>
                <span class="badge bg-secondary me-2">Santé</span>
                <span class="badge bg-secondary me-2">Loisirs</span>
                <span class="badge bg-secondary me-2">Vêtements</span>
                <span class="badge bg-secondary me-2">Éducation</span>
                <span class="badge bg-secondary me-2">Abonnements</span>
            </div>

            <h6 class="text-success">Revenus courants :</h6>
            <div>
                <span class="badge bg-secondary me-2">Salaire</span>
                <span class="badge bg-secondary me-2">Freelance</span>
                <span class="badge bg-secondary me-2">Investissements</span>
                <span class="badge bg-secondary me-2">Allocations</span>
                <span class="badge bg-secondary me-2">Remboursements</span>
            </div>
        </div>
    </div>
{% endblock %}
